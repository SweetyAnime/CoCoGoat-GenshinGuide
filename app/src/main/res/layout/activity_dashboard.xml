<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Dashboard" >

    <ImageView
        android:id="@+id/welcme"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/welcome_banner"
        android:contentDescription="@string/welcme" />

    <ImageButton
        android:id="@+id/chrbtn"
        android:layout_width="121dp"
        android:layout_height="139dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="104dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/chrbt"
        android:scaleType="fitCenter"
        android:src="@drawable/characters_btn"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/wepbtn"
        android:layout_width="125dp"
        android:layout_height="136dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp"
        android:contentDescription="@string/wepbt"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/weapons_btn" />

    <ImageButton
        android:id="@+id/artibtn"
        android:layout_width="122dp"
        android:layout_height="137dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="109dp"
        android:layout_marginEnd="10dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        android:src="@drawable/artifacts_btn"
        android:contentDescription="@string/artbt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="9dp"
        android:layout_marginBottom="-1dp"
        android:text="@string/note_this_is_in_under_development_more_features_available_soon_in_next_update"
        android:textColor="@color/teal_700"
        android:textSize="11sp" />


</RelativeLayout>

